<main class="form-container">
  <h1><%= title %></h1>

  <!-- Flash message (if available) -->
  <div class="flash-message">
    <%- messages() %>

    <p>Confirm Deletion - The delete is permanent.</p>

    <% if (errors) { %>
      <ul class="notice">
        <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>
  </div>

  <form id="deleteForm" action="/inv/delete-inventory" method="post" class="data-form">

    <label for="inv_make">Make</label>
    <input 
      type="text" 
      id="inv_make" 
      name="inv_make" 
      value="<%- inv_make %>"
      required 
      pattern="[A-Z][A-Za-z0-9 ]{2,}" 
      title="Make must start with a capital letter and be at least 3 characters long."
      readonly
    >

    <label for="inv_model">Model</label>
    <input 
      type="text" 
      id="inv_model" 
      name="inv_model" 
      value="<%- inv_model %>"
      required 
      pattern="[A-Z][A-Za-z0-9 ]{2,}" 
      title="Model must start with a capital letter and be at least 3 characters long."
      readonly
    >

    <label for="inv_year">Year</label>
    <input 
      type="number" 
      id="inv_year" 
      name="inv_year" 
      value="<%- inv_year %>"
      required 
      min="1900" 
      max="<%= new Date().getFullYear() + 1 %>" 
      title="Please enter a valid year between 1900 and <%= new Date().getFullYear() + 1 %>."
      readonly
    >

    <label for="inv_price">Price</label>
    <input 
      type="number" 
      id="inv_price" 
      name="inv_price" 
      value="<%- inv_price %>"
      required 
      min="0" 
      step="0.01" 
      title="Price must be a positive number."
      readonly
    >

    <button type="submit">Delete Vehicle</button>
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <% } %>>
  </form>
</main>