<main class="edit-account-page">
  <% if (title) { %>
    <h1><%- title %></h1>
  <% } else { 
    res.redirect('/');
  } %>

  <!-- Flash messages / Errors -->
  <div class="flash-message">
    <% if (locals.notice && locals.notice.length > 0) { %>
      <ul class="notice">
        <% locals.notice.forEach(msg => { %>
          <li><%- msg %></li>
        <% }) %>
      </ul>
    <% } %>

    <% if (errors && errors.length > 0) { %>
      <ul class="notice">
        <% errors.forEach(error => { %>
          <li><%- error.msg %></li>
        <% }) %>
      </ul>
    <% } %>
  </div>

  <!-- Account Edit Form -->
  <section class="form-section">
    <h2>Account Edit</h2>
    <form action="/account/edit-account" method="post" class="account-form">
      <!-- hidden ID -->
      <input type="hidden" name="account_id" value="<%- accountData.account_id %>">

      <label for="account_firstname">First Name</label>
      <input 
        type="text" 
        id="account_firstname" 
        name="account_firstname" 
        required 
        value="<%- typeof account_firstname !== 'undefined' ? account_firstname : accountData.account_firstname %>">

      <label for="account_lastname">Last Name</label>
      <input 
        type="text" 
        id="account_lastname" 
        name="account_lastname" 
        required 
        value="<%- typeof account_lastname !== 'undefined' ? account_lastname : accountData.account_lastname %>">

      <label for="account_email">Email Address</label>
      <input 
        type="email" 
        id="account_email" 
        name="account_email" 
        required 
        value="<%- typeof account_email !== 'undefined' ? account_email : accountData.account_email %>">

      <button type="submit">Save Changes</button>
    </form>
  </section>

  <!-- Change Password Form -->
  <section class="form-section">
    <h2>Change Password</h2>
    <p class="password-info">
      Enter a new password below to replace your current one.  
      Passwords must be at least 12 characters and include at least 1 uppercase letter, 1 number, and 1 special character.
    </p>

    <form action="/account/edit-password" method="post" class="account-form">
      <!-- hidden ID -->
      <input type="hidden" name="account_id" value="<%- accountData.account_id %>">

      <label for="new_password">New Password</label>
      <input 
        type="password" 
        id="new_password" 
        name="new_password" 
        required>

      <label for="confirm_password">Confirm New Password</label>
      <input 
        type="password" 
        id="confirm_password" 
        name="confirm_password" 
        required>

      <button type="submit">Change Password</button>
    </form>
  </section>
</main>
