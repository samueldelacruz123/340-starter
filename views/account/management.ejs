<section class="management-page">
    <% if (title) { %>
        <h1><%= title %></h1>
    <% } else { res.redirect('/'); } %>

    <!-- Flash messages / Errors -->
    <div class="flash-message">
        <%- messages() %>

        <% if (errors && errors.length > 0) { %>
        <ul class="notice">
            <% errors.forEach(error => { %>
            <li><%- error.msg %></li>
            <% }) %>
        </ul>
        <% } %>
    </div>

    <!-- Greeting -->
    <h2>Welcome <%= accountData.account_firstname %></h2>

    <!-- Edit account link -->
    <p>
        <a href="/account/edit/<%= accountData.account_id %>">Edit Account Information</a>
    </p>

    <!-- âœ… New Favorites link -->
    <p>
        <a href="/favorites" class="favorites-link">View My Favorites</a>
    </p>

    <!-- Employee/Admin only section -->
    <% if (accountData.account_type === 'Employee' || accountData.account_type === 'Admin') { %>
        <h3>Inventory Management</h3>
        <p><a href="/inv/">Manage Inventory</a></p>
    <% } %>
</section>
